<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.GithubApp.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.GithubApp.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabIndicator">@drawable/shape_bg_tab_indicator</item>
        <item name="android:background">@drawable/shape_bg_tab</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">1.5dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabTextColor">?android:textColorSecondary</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dialog_corner_rounded</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
</resources>