<resources>
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnPrimary">@color/blackGithub</item>
        <item name="colorPrimary">@color/blackGithub</item>
        <item name="colorPrimaryContainer">@color/blackGithub</item>
        <item name="colorSecondary">@color/blackGithub</item>
        <item name="colorSecondaryContainer">@color/blackGithub</item>
        <item name="android:statusBarColor">@color/colorSurface</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="toolbarStyle">@style/Widget.GithubApp.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.GithubApp.Appbar</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_github</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <item name="postSplashScreenTheme">@style/Theme.GithubApp</item>
    </style>

    <style name="Widget.GithubApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GithubApp.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:elevation">1dp</item>
        <item name="navigationIconTint">@color/blackGithub</item>
        <item name="titleMarginStart">@dimen/title_margin_toolbar</item>
    </style>

    <style name="Widget.GithubApp.Appbar" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GithubApp.Appbar</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.GithubApp.Toolbar.Search" parent="Widget.GithubApp.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.GithubApp.Toolbar.Search</item>
    </style>

    <style name="Widget.GithubApp.Appbar.Search" parent="Widget.GithubApp.Appbar">
        <item name="elevation">1dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.GithubApp.Appbar.Search</item>
    </style>

    <style name="ThemeOverlay.GithubApp.Toolbar" parent="">
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryVariant">@color/blackGithub</item>
        <item name="colorOnPrimary">@color/blackGithub</item>
    </style>

    <style name="ThemeOverlay.GithubApp.Appbar" parent="">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@color/blackGithub</item>
        <item name="colorOnPrimary">@color/blackGithub</item>
    </style>

    <style name="ThemeOverlay.GithubApp.Toolbar.Search" parent="ThemeOverlay.GithubApp.Toolbar">
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.GithubApp.Appbar.Search" parent="ThemeOverlay.GithubApp.Appbar">
        <item name="colorPrimary">@color/colorBackground</item>
    </style>

    <style name="Widget.GithubApp.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_hint</item>
        <item name="queryBackground">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:background">@drawable/shape_bg_search</item>
    </style>

    <style name="Widget.GithubApp.Divider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/blackAlpha16</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
    </style>

    <style name="Widget.GithubApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/whiteAlpha16</item>
        <item name="strokeColor">@color/blackAlpha16</item>
        <item name="icon">@drawable/ic_external_link</item>
        <item name="iconTint">?android:textColorPrimary</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>
</resources>