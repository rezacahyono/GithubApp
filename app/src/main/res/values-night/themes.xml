<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorBackground">@color/colorBackgroundInverse</item>
        <item name="colorOnPrimary">@color/whiteGithub</item>
        <item name="colorPrimary">@color/whiteGithub</item>
        <item name="colorPrimaryContainer">@color/whiteGithub</item>
        <item name="colorSecondary">@color/whiteGithub</item>
        <item name="colorSecondaryContainer">@color/whiteGithub</item>
        <item name="android:statusBarColor">@color/colorSurfaceInverse</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverse</item>
        <item name="colorSurface">@color/colorSurfaceInverse</item>

        <item name="toolbarStyle">@style/Widget.GithubApp.Toolbar</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_github</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenBackground">@color/colorBackgroundInverse</item>
        <item name="postSplashScreenTheme">@style/Theme.GithubApp</item>
    </style>

    <style name="Widget.GithubApp.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.GithubApp.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="titleMarginStart">@dimen/title_margin_toolbar</item>
        <item name="android:elevation">0dp</item>
        <item name="navigationIconTint">@color/whiteGithub</item>
    </style>

    <style name="ThemeOverlay.GithubApp.Toolbar" parent="">
        <item name="colorPrimary">@color/colorSurfaceInverse</item>
        <item name="colorPrimaryVariant">@color/whiteAlpha80</item>
        <item name="colorOnPrimary">@color/whiteGithub</item>
    </style>

    <style name="Widget.GithubApp.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_hint</item>
        <item name="queryBackground">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:background">@drawable/shape_bg_search</item>
    </style>

    <style name="Widget.GithubApp.Divider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/whiteAlpha16</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
    </style>
</resources>